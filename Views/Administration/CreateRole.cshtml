@model netchill.ViewModel.CreateRoleViewModel
@{
    ViewData["Title"] = "Create New Role"; 
}
<h1>Create New Role</h1>

<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div class="mb-3" asp-validation-summary="All" class="text-danger">
                <label asp-for="RoleName" class="form-label">Role: </label>
                <input asp-for="RoleName" type="text" class="form-control" id="exampleInputEmail1"
                    aria-describedby="emailHelp">
                <span asp-validation-for="RoleName" class="text-danger"></span>

            </div>

            <button type="submit" class="btn btn-primary">Create Role</button>
        </form>



    </div>
</div>